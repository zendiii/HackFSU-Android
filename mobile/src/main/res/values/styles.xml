<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Theme Colors. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Enable dialog stuff -->
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>

    </style>

    <!-- Style for Material Status Bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--need to fix status bar color
        <item name="android:statusBarColor">@color/abc_primary_text_material_light</item>-->
    </style>

    <!-- Styles for subactivities -->
    <style name="AppTheme.HelpRequest" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/help</item>
        <item name="colorPrimaryDark">@color/help_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Styles for main pop-up dialogs -->
    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/primaryTextLight</item>
        <item name="android:textColorSecondary">@color/primaryTextLight</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

    </style>

    <style name="AppTheme.Tabs" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.Tabs.Text</item>
        <item name="tabSelectedTextColor">@color/primaryTextLight</item>
        <item name="tabIndicatorColor">@color/primaryTextLight</item>

        <item name="tabPaddingStart">24dp</item>
        <item name="tabPaddingEnd">24dp</item>
    </style>

    <style name="AppTheme.Tabs.Text" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/primaryTextLight</item>
    </style>
    
    <style name="AppTheme.Update"/>

    <style name="AppTheme.Update.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primaryTextDark</item>
    </style>

    <style name="AppTheme.Countdown">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryTextDark</item>
    </style>

    <style name="AppTheme.ExpandedTitle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.CollapsedTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#fff</item>
    </style>


    <style name="AppTheme.CountdownTime" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.CountdownLabel" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
